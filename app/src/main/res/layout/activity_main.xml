<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/toolbar"
        />

    <Button
        android:paddingLeft="@dimen/thin_margin"
        android:paddingRight="@dimen/thin_margin"
        android:paddingTop="@dimen/thin_margin"
        android:paddingBottom="@dimen/thin_margin"
        android:id="@+id/btn1"
        android:text="Maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingLeft="@dimen/thin_margin"
        android:paddingRight="@dimen/thin_margin"
        android:paddingTop="@dimen/thin_margin"
        android:paddingBottom="@dimen/thin_margin"
        android:id="@+id/txt1"
        android:text="This is text.\n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:padding="@dimen/thin_margin">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
