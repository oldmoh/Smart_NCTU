<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="3"
    android:background="@drawable/rim4"
    android:padding="@dimen/thin_margin"
    android:id="@+id/gridcard"
    android:clickable="true"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="4dp"
        android:background="@drawable/rim3"
        android:scaleType="centerCrop"
        android:contentDescription="aaa"
        />
    <TextView
        android:id="@+id/title"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/thin_margin"
        android:text="Title"
        android:textSize="24dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/thin_margin"
        android:layout_gravity="end"
        android:text="2016/4/23"
        />
    <TextView
        android:id="@+id/content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/thin_margin"
        android:text="content ajsiodfjafj\ndiosaf"
        />
</GridLayout>