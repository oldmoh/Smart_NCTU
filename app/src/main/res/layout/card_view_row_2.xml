<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Style_Black2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_min_height"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="@dimen/thin_margin"
        card_view:cardBackgroundColor="@color/Style_White"
        card_view:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card2_image_height"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:contentDescription="Description"
                android:maxHeight="@dimen/card_image_max_height" />
            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:text="@string/club_title"
                android:textColor="@color/Style_WhiteTransparent"
                android:background="@color/colorBlackWhite5"
                android:alpha="0.6"
                android:layout_alignBottom="@+id/card_image"/>
            <TextView
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_text_content"
                android:textSize="@dimen/content_text_size"
                android:layout_below="@+id/card_image"/>
            <ImageButton
                android:id="@+id/card_pin"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:src="@drawable/pin"
                android:contentDescription="Description"
                android:background="@drawable/button_animation"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                />
            <ImageButton
                android:id="@+id/card_favorite"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:src="@drawable/heart3"
                android:contentDescription="Description"
                android:background="@drawable/button_animation"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/card_pin"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
