<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_rim">

    <TextView
        android:id="@+id/design1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="24dp"
        android:text="Title"
        />

    <TextView
        android:id="@+id/design1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design1_title"
        android:paddingStart="@dimen/fab_margin"
        android:alpha="0.5"
        android:textSize="16dp"
        android:text="2016/4/27"
        />

    <TextView
        android:id="@+id/design1_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/design1_date"
        android:padding="@dimen/fab_margin"
        android:textSize="20dp"
        android:text="This is a sample content."
        />

    <ImageView
        android:id="@+id/design1_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design1_content"
        android:visibility="invisible"
        />

</RelativeLayout>
