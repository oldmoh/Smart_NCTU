<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Style_Black2"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_min_height"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="@dimen/fab_margin"
        card_view:cardBackgroundColor="@color/Style_White"
        card_view:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/card_title_max_width"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:text="@string/no_title"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/card_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_image"
                android:paddingTop="@dimen/fab_margin"
                android:text="@string/no_text_content"
                android:textColor="@color/Style_Black"
                android:textSize="@dimen/content_text_size"
                android:alpha="0.5"
                />
            <ImageButton
                android:id="@+id/card_pin"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_toEndOf="@+id/card_favorite"
                android:layout_alignParentBottom="true"
                android:src="@drawable/pin"
                android:contentDescription="Description"
                />
            <ImageButton
                android:id="@+id/card_favorite"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_alignParentBottom="true"
                android:src="@drawable/heart3"
                android:contentDescription="Description"
                />
            <ImageView
                android:id="@+id/card_image"
                android:layout_width="@dimen/card_image_max_width"
                android:layout_height="@dimen/card_image_max_height"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="Description" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
